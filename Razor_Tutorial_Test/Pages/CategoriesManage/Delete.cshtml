@page
@model Razor_Tutorial_Test.Pages.CategoriesManage.DeleteModel
<div class="page-section bg-dark text-primary" style="min-height:780px;">
    <div class="container mt-5 mb-5 bg-secondary border border-primary rounded-5">
        <form method="post">
            <input hidden asp-for="Category.Id" />
            <div class="p-3 mt-4 mb-4">
                <div class="row pb-2">
                    <h2 class="text-primary">
                        Delete Category
                    </h2>
                    <hr/>
                </div>
                <div class="mb-3" >
                    <label asp-for="Category.Name"></label>
                    <input asp-for="@Model.Category.Name" disabled class="form-control bg-dark text-white border-primary" />
                </div>
                <div class="mb-3">
                    <label asp-for="Category.Description"></label>
                    <textarea asp-for="@Model.Category.Description" disabled class="form-control bg-dark text-white border-primary" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary" style="width:150px;">Delete</button>
                <a asp-page="Index" class="btn btn-outline-dark" style="width:150px;">Back to List</a>

            </div>
        </form>
    </div>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial.cshtml"/>
    }
}