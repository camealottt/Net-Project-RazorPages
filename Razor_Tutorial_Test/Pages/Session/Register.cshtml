@page
@model Razor_Tutorial_Test.Pages.Session.RegisterModel
<div class="page-section bg-dark">
    <div class="container mb-5 mt-5 bg-secondary border border-primary text-primary rounded-5">
        <form method="post">
            <div class="mb-3 p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">
                        Register
                    </h2>
                    <hr />
                    <div class="alert alert-warning mt-4 text-center">
                        <strong>Already have an account?</strong>
                        <a asp-page="/Session/Login" class="text-decoration-underline text-primary fw-bold">Login Your Account!</a>.
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Accounts.Username"></label>
                    <input asp-for="@Model.Accounts.Username" class="form-control bg-dark text-white border-primary" placeholder="Insert Your Username Here..." />
                    <span asp-validation-for="Accounts.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Accounts.Email"></label>
                    <input asp-for="@Model.Accounts.Email" class="form-control bg-dark text-white border-primary" placeholder="Insert Your Email Here..." />
                    <span asp-validation-for="Accounts.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Accounts.PasswordHash"></label>
                    <input asp-for="@Model.Accounts.PasswordHash" class="form-control bg-dark text-white border-primary" placeholder="Insert Your Password Here..." type="password" />
                    <span asp-validation-for="Accounts.PasswordHash" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Accounts.Type" value="User" />

                <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
                <a asp-page="/Index" class="btn btn-dark" style="width:150px;">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}