@page
@model Razor_Tutorial_Test.Pages.AccountManage.IndexModel

<div class="page-section bg-dark text-primary" style="min-height:780px;">
    <div class="container mt-5 mb-5 bg-secondary border border-primary rounded-5">
        <h2 class="page-section-heading text-center text-uppercase mt-3 mb-4">User List</h2>

        <!-- Search and Create section -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-4 gap-3">
            <a asp-page="create" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-plus-fill"></i>
                Create New User
            </a>

            <form method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" class="form-control border-primary bg-dark text-primary"
                           placeholder="Search by username"
                           asp-for="SearchString" />
                    <button class="btn btn-outline-primary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchString))
                    {
                        <a asp-page="Index" class="btn btn-outline-primary">
                            <i class="bi bi-x-circle"></i> Clear Search
                        </a>
                    }
                </div>
            </form>
        </div>

        <!-- Table wrapper with responsive scroll for medium screens and up -->
        <div class="table-responsive d-none d-md-block">
            <table class="table table-bordered border-primary text-primary">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Picture</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.Accounts)
                    {
                        <tr>
                            <td>@obj.Username</td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(obj.ProfilePicture))
                                {
                                    <img src="@Url.Content(obj.ProfilePicture)" alt="Profile Picture"
                                         class="img-fluid border border-primary rounded-5"
                                         style="max-width: 50px; max-height: 50px;" />
                                }
                                else
                                {
                                    <img src="/images/default-profile.png" alt="Default Profile"
                                         class="img-fluid border border-primary rounded-5"
                                         style="max-width: 50px; max-height: 50px;" />
                                }
                            </td>
                            <td>@obj.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="d-flex flex-wrap gap-2 justify-content-center">
                                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                        </svg>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Card view for mobile devices (visible only on small screens) -->
        <div class="d-md-none">
            @if (!Model.Accounts.Any())
            {
                <div class="alert alert-info text-center">
                    No users found matching your search criteria.
                </div>
            }

            @foreach (var obj in Model.Accounts)
            {
                <div class="card mb-3 border-primary bg-dark text-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                @if (!string.IsNullOrEmpty(obj.ProfilePicture))
                                {
                                    <img src="@Url.Content(obj.ProfilePicture)" alt="Profile Picture"
                                         class="img-fluid border border-primary rounded-5"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="/images/default-profile.png" alt="Default Profile"
                                         class="img-fluid border border-primary rounded-5"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                            </div>
                            <h5 class="card-title mb-0">@obj.Username</h5>
                        </div>
                        <p class="card-text">
                            <strong>Created:</strong> @obj.CreatedAt.ToString("dd/MM/yyyy")
                        </p>
                        <div class="d-flex justify-content-end">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary me-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                </svg>
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Empty state message when no search results -->
        @if (!Model.Accounts.Any() && !string.IsNullOrEmpty(Model.SearchString))
        {
            <div class="d-none d-md-block alert alert-info text-center">
                No users found matching your search criteria.
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}