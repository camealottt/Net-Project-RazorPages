    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.delete-btn').forEach(function (button) {
            button.addEventListener('click', function (e) {
                e.preventDefault();

                const form = button.closest('.delete-form');

                Swal.fire({
                    title: "Are you sure you want to delete this item?",
                    icon: "warning",
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    denyButtonText: "Don't Delete"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Deleted!',
                            icon: 'success',
                            showConfirmButton: false,
                            timer: 1000
                        }).then(() => {
                            form.submit();
                        });
                    } else if (result.isDenied) {
                        Swal.fire("Changes are not saved", "", "info");
                    }
                });
            });
        });
    </script>
    <script>
        function showSection(sectionId) {
            document.getElementById('available-section').style.display = 'none';
            document.getElementById('traded-section').style.display = 'none';
            document.getElementById('unavailable-section').style.display = 'none';

            document.getElementById(sectionId).style.display = 'block';
        }

        // Default to showing available items
        document.addEventListener("DOMContentLoaded", function () {
            showSection('available-section');
        });
    </script>
}