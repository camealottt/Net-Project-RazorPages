                                                    <button type="submit" class="btn btn-outline-danger delete-btn">Delete Item</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </section>
            }
            else
            {
                <div class="card h-100 bg-dark my-4">
                    <div class="text-center py-5">
                        <h4 class="text-muted">No items to display.</h4>
                    </div>
