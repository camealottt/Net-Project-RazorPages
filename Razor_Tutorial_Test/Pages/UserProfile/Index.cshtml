@page
@model Razor_Tutorial_Test.Pages.UserProfile.IndexModel
@{
    var user = Model.UserProfile;
    var items = Model.UserItems;
    var itemImages = Model.ItemImages;
    var categories = Model.Categories;
}

<section class="page-section bg-dark">
    <!-- User Profile Container -->
    <div class="container mt-4 mb-4 bg-secondary text-white border border-primary rounded">
        <div class="row py-4">
            <!-- Profile Picture (stacks on mobile) -->
            <div class="col-md-3 col-sm-12 text-center mb-3 mb-md-0">
                <img src="@(string.IsNullOrWhiteSpace(user.ProfilePicture) ? "/images/default-profile.png" : user.ProfilePicture)"
                     alt="Profile Picture"
                     class="rounded-circle img-fluid border border-primary"
                     style="width: 180px; height: 180px; object-fit: cover;" />
                <div class="mt-3">
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary">Edit Profile</a>
                </div>
            </div>

            <!-- User Info -->
            <div class="col-md-9 col-sm-12">
                <h4 class="mb-3"><strong>@user.Username</strong></h4>
                <div class="row g-2">
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="border border-primary p-2 mb-2"><strong>Total Items:</strong> @items.Count()</div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="border border-primary p-2 mb-2"><strong>Followers:</strong> 0</div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-12">
                        <div class="border border-primary p-2 mb-2"><strong>Following:</strong> 0</div>
                    </div>
                </div>
                <div class="border border-primary p-3 mt-2">
                    <strong>Bio:</strong>
                    <p class="mb-0">@user.Bio</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Container -->
    <div class="container bg-secondary text-white border border-primary mt-4 rounded pb-4">
        <!-- Items Header and Buttons -->
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <h4 class="mb-0">Your Items</h4>
                </div>
                <div class="col-12 col-md-8">
                    <div class="d-flex flex-wrap gap-2 justify-content-start justify-content-md-end">
                        <button class="btn btn-primary" onclick="showSection('available-section')">Available</button>
                        <button class="btn btn-warning text-white" onclick="showSection('traded-section')">Traded</button>
                        <button class="btn btn-danger" onclick="showSection('unavailable-section')">Unavailable</button>
                        <a asp-page="/UserProfile/Add" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle"></i> Add Item
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <hr class="border-light" />

        <!-- Item List Sections -->
        <div class="container">
            @if (items != null && items.Any())
            {
                <!-- Available Items Section -->
                <section id="available-section" class="mt-3">
                    @{
                        var availableItems = items.Where(i => i.Status != null && i.Status.Equals("Available", StringComparison.OrdinalIgnoreCase)).ToList();
                    }
                    @if (!availableItems.Any())
                    {
                        <div class="d-flex justify-content-center align-items-center my-4" style="min-height: 200px;">
                            <p class="text-muted">No available items to display.</p>
                        </div>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                            @foreach (var item in availableItems)
                            {
                                var images = itemImages.Where(i => i.ItemId == item.Id).ToList();
                                var firstImage = images.FirstOrDefault()?.ImageUrl ?? "/itemimages/no-image.png";
                                var modalId = $"modalItem{item.Id}";
                                <div class="col mb-3">
                                    <div class="card h-100 bg-dark text-white border border-primary position-relative">
                                        <img src="@firstImage" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Name" />
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title text-truncate">@item.Name</h5>
                                            <p class="card-text"><small class="text-muted">@item.CreatedAt.ToString("g")</small></p>
                                            <button type="button" class="btn btn-outline-light mt-auto" data-bs-toggle="modal" data-bs-target="#@modalId">View Details</button>
                                        </div>
                                        <div class="position-absolute" style="top: 10px; right: 10px;">
                                            <span class="badge bg-success">Available <i class="bi bi-check-circle"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@($"{modalId}Label")" aria-hidden="true">
                                    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                        <div class="modal-content bg-dark text-white">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="@($"{modalId}Label")">@item.Name</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @if (images.Any())
                                                {
                                                    <div id="carousel-@item.Id" class="carousel slide mb-3" data-bs-ride="carousel">
                                                        <div class="carousel-inner">
                                                            @for (int i = 0; i < images.Count; i++)
                                                            {
                                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                                    <img src="@images[i].ImageUrl" class="d-block w-100" style="max-height: 350px; object-fit: contain;" />
                                                                </div>
                                                            }
                                                        </div>
                                                        @if (images.Count > 1)
                                                        {
                                                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@item.Id" data-bs-slide="prev">
                                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                                <span class="visually-hidden">Previous</span>
                                                            </button>
                                                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@item.Id" data-bs-slide="next">
                                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                                <span class="visually-hidden">Next</span>
                                                            </button>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="text-center mb-3">
                                                        <img src="/itemimages/no-image.png" class="img-fluid" style="max-height: 350px; object-fit: contain;" />
                                                        <div class="alert alert-warning mt-2">No image to display for this item.</div>
                                                    </div>
                                                }

                                                <p><strong>Description:</strong> @item.Description</p>
                                                @{
                                                    var categoryName = categories.FirstOrDefault(c => c.Id == item.Category)?.Name ?? "Unknown";
                                                }
                                                <p><strong>Category:</strong> @categoryName</p>
                                                <p><strong>Price:</strong> RM @item.Price.ToString("F2")</p>
                                                <p><strong>Created At:</strong> @item.CreatedAt.ToString("f")</p>
                                            </div>
                                            <div class="modal-footer flex-wrap">
                                                <a asp-page="/UserProfile/EditItem" asp-route-id="@item.Id" class="btn btn-outline-light mb-2 mb-sm-0">Edit Item</a>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline delete-form">
                                                    <button type="submit" class="btn btn-outline-danger delete-btn">Delete Item</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </section>

                <!-- Traded Items Section -->
