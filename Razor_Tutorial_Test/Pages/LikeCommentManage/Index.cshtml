@page
@model Razor_Tutorial_Test.Pages.LikeCommentManage.IndexModel
<div class="page-section bg-dark text-primary">
    <div class="container mt-5 mb-5 bg-secondary border border-primary rounded-5">
        <h2 class="page-section-heading text-center text-uppercase mt-5 mb-5">Item Listing</h2>

        <!-- Search Box -->
        <div class="row mb-4">
            <div class="col-md-6 offset-md-3">
                <form method="get" class="input-group">
                    <input type="text" class="form-control border-primary bg-dark text-primary" placeholder="Search for items..."
                           name="searchString" value="@Model.SearchString">
                    <button class="btn btn-primary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                        Search
                    </button>
                </form>
                @if (!string.IsNullOrEmpty(Model.SearchString))
                {
                <a asp-page="Index" class="btn btn-outline-primary">
                    <i class="bi bi-x-circle"></i> Clear Search
                </a>
                }
            </div>
        </div>

        <div class="d-flex flex-wrap gap-2 mb-4">
            <a asp-page="CreateLike" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i> Create Like
            </a>
            <a asp-page="CreateComment" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i> Create Comment
            </a>
        </div>
        <div class="table-responsive mb-5">
            <table class="table table-bordered border-primary text-primary">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Created At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.ItemList)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@obj.Status</td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                                        </svg>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}