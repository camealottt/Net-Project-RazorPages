@page
@model Razor_Tutorial_Test.Pages.OrderManage.DeleteModel
<div class="page-section bg-dark text-primary" style="min-height:780px;">
    <div class="container mt-5 mb-5 bg-secondary border border-primary rounded-5">
        <form method="post">
            <input hidden asp-for="OrderRecord.Id" />
            <div class="p-3 mt-5 mb-5">
                <div class="row pb-2">
                    <h2 class="text-primary">
                        Delete Order 
                    </h2>
                    <hr/>
                </div>
                <div class="mb-3" >
                    <label asp-for="OrderRecord.BuyerUserID"></label>
                    <input asp-for="@Model.OrderRecord.BuyerUserID" disabled class="form-control bg-dark text-white border-primary" />
                </div>
                <div class="mb-3">
                    <label asp-for="OrderRecord.SellerUserID"></label>
                    <input asp-for="@Model.OrderRecord.SellerUserID" disabled class="form-control bg-dark text-white border-primary" />
                </div>
                <div class="mb-3">
                    <label asp-for="OrderRecord.OfferedItemID"></label>
                    <input asp-for="@Model.OrderRecord.OfferedItemID" disabled class="form-control bg-dark text-white border-primary" />
                </div>
                <div class="mb-3">
                    <label asp-for="OrderRecord.RequestedItemID"></label>
                    <input asp-for="@Model.OrderRecord.RequestedItemID" disabled class="form-control bg-dark text-white border-primary" />
                </div>
                <button type="submit" class="btn btn-primary" style="width:150px;">Delete</button>
                <a asp-page="Index" class="btn btn-dark" style="width:150px;">Back</a>

            </div>
        </form>
    </div>
</div>
@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial.cshtml"/>
    }
}